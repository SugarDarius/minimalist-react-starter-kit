.hello-world-box
  position fixed
  top 0
  left 0
  display table
  table-layout fixed !important
  width 100%
  height 100%
  background linear-gradient(to right, #fd746c, #ff9068)
  overflow hidden !important

  .hello-world-content
    position relative
    display table-cell
    width 100%
    height 100%
    vertical-align middle !important
    overflow hidden !important

    > h3
      position relative
      width 100%
      height auto
      font-family Arial
      font-size 28px
      color #f4f4f4
      text-align center
      letter-spacing 6px
